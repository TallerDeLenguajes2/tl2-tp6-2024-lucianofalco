@model Presupuesto

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-light p-5 shadow rounded">
            <h2 class="text-center text-danger mb-4">¿Desea eliminar este presupuesto?</h2>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <p class="mb-0">Presupuesto: #@Model.IdPresupuesto</p>
                </div>
                
                <div class="card-body">
                    <h5 class="card-title text-muted">Fecha de Creación: @Model.FechaCreacion.ToString("dd/MM/yyyy")</h5>
                    <p class="card-text">Nombre del destinatario: <span class="fw-bold">@Model.NombreDestinatario</span></p>

                    <div class="d-flex justify-content-around mt-4">
                        <form asp-controller="Presupuesto" asp-action="EliminarPresupuestoPost" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@Model.IdPresupuesto" />
                            <button type="submit" class="btn btn-danger px-4" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar este presupuesto permanentemente">
                                Eliminar
                            </button>
                        </form>

                        <a asp-controller="Presupuesto" asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
