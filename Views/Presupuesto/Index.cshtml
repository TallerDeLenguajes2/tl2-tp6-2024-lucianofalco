@model List<Presupuesto>

<h2 class="text-primary mb-4">Lista de Presupuestos</h2>

<table class="table table-striped table-bordered table-hover shadow-sm">
    <thead class="table-dark text-uppercase">
        <tr>
            <th scope="col">#ID</th>
            <th scope="col">Destinatario</th>
            <th scope="col">Fecha de creaci√≥n</th>
            <th scope="col" class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <th scope="row" class="text-center text-primary">@p.IdPresupuesto</th>
                <td>@p.NombreDestinatario</td>
                <td>@p.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td class="text-center">
                    <a asp-controller="Presupuesto" asp-action="ModificarPresupuesto" asp-route-id="@p.IdPresupuesto" class="btn btn-warning btn-sm mx-1">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-controller="Presupuesto" asp-action="EliminarPresupuesto" asp-route-id="@p.IdPresupuesto" class="btn btn-danger btn-sm mx-1">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                    <a asp-controller="Presupuesto" asp-action="AgregarProducto" asp-route-id="@p.IdPresupuesto" class="btn btn-primary btn-sm mx-1">
                        <i class="bi bi-eye"></i> Agregar Producto
                    </a>
                    <a asp-controller="Presupuesto" asp-action="VerDetalle" asp-route-id="@p.IdPresupuesto" class="btn btn-info btn-sm mx-1">
                        <i class="bi bi-eye"></i> Ver detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end mt-3">
    <a asp-controller="Presupuesto" asp-action="AltaPresupuesto" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Agregar presupuesto
    </a>
</div>
