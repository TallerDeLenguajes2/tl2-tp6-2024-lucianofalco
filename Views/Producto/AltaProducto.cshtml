@model Producto

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-light p-4 shadow rounded">
            <h2 class="text-sm-start text-primary mb-4">Crear Nuevo Producto</h2>

            <form asp-controller="Producto" asp-action="CrearProducto" method="post">
              
                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="form-label font-weight-bold">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Escribe la descripción del producto">
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Precio" class="form-label font-weight-bold">Precio</label>
                    <input asp-for="Precio" class="form-control" placeholder="Ej: 199.99">
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success me-2 px-4">Crear Producto</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
