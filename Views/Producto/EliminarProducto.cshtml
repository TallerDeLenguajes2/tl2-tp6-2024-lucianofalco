@model Producto

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 bg-light p-4 shadow rounded">
            <h2 class="text-sm-start text-primary mb-4">Â¿Desea eliminar este producto?</h2>
            <div class="card">
                <div class="card-header">
                    <p> Producto: @Model.IdProducto</p>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Descripcion</h5>
                    <p class="card-text">$@Model.Precio</p>
                    
                    <form asp-controller="Producto" asp-action="EliminarProductoPorId" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.IdProducto" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>

                    <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</div>
